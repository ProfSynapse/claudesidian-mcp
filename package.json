{
    "name": "claudesidian-mcp",
    "version": "0.1.0",
    "description": "Model Context Protocol (MCP) integration for Obsidian",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc --noEmit && node esbuild.config.mjs production && tsc connector.ts --outDir . --esModuleInterop true --module commonjs",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "test": "jest",
        "lint": "eslint . --ext .ts",
        "build-connector": "tsc connector.ts --outDir . --esModuleInterop true --module commonjs",
        "deploy": "npm run build && powershell.exe -ExecutionPolicy Bypass -File .\\postbuild.ps1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "mcp",
        "claude"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/diff-match-patch": "^1.0.36",
        "@types/jest": "^29.5.14",
        "@types/node": "^16.18.0",
        "@types/request": "^2.48.8",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "builtin-modules": "^3.3.0",
        "esbuild": "0.21.5",
        "eslint": "^8.0.0",
        "jest": "^29.7.0",
        "obsidian": "^1.4.0",
        "ts-jest": "^29.3.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.9.0",
        "@xenova/transformers": "^2.17.1",
        "chromadb": "^2.4.4",
        "diff-match-patch": "^1.0.5",
        "gpt-tokenizer": "^2.9.0",
        "onnxruntime-web": "^1.17.1",
        "tough-cookie": "^4.1.3",
        "yaml": "^2.6.1"
    }
}
