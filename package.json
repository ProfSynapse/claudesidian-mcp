{
    "name": "bridge-mcp",
    "version": "0.1.0",
    "description": "Model Context Protocol (MCP) integration for Obsidian",
    "main": "main.js",
    "scripts": {
      "dev": "node esbuild.config.mjs",
      "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && tsc connector.ts --outDir . --esModuleInterop true --module commonjs",
      "version": "node version-bump.mjs && git add manifest.json versions.json",
      "test": "jest",
      "lint": "eslint . --ext .ts",
      "build-bridge": "tsc src/ipc-bridge.ts --outDir build --esModuleInterop true --module commonjs",
      "deploy": "npm run build && powershell.exe -ExecutionPolicy Bypass -File .\\postbuild.ps1"
    },
    "keywords": [
      "obsidian",
      "plugin",
      "mcp",
      "claude"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
      "@types/node": "^16.18.0",
      "@typescript-eslint/eslint-plugin": "^5.47.0",
      "@typescript-eslint/parser": "^5.47.0",
      "builtin-modules": "^3.3.0",
      "esbuild": "^0.19.0",
      "eslint": "^8.0.0",
      "obsidian": "^1.4.0",
      "typescript": "^5.0.0"
    },
    "dependencies": {
      "@modelcontextprotocol/sdk": "^1.0.0",
      "inversify": "^6.2.1",
      "yaml": "^2.6.1",
      "zod": "^3.22.0",
      "graphology": "^0.25.4",
      "graphology-shortest-path": "^2.0.2",
      "graphology-types": "^0.24.7",
      "mnemonist": "^0.39.5"
    }
  }
  