{
    "name": "claudesidian-mcp",
    "version": "3.0.0",
    "description": "Model Context Protocol (MCP) integration for Obsidian",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc --noEmit --skipLibCheck && node esbuild.config.mjs production && tsc connector.ts --outDir . --esModuleInterop true --module commonjs --skipLibCheck",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "test": "jest",
        "lint": "eslint . --ext .ts",
        "build-connector": "tsc connector.ts --outDir . --esModuleInterop true --module commonjs --skipLibCheck",
        "deploy": "npm run build && powershell.exe -ExecutionPolicy Bypass -File .\\postbuild.ps1"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "mcp",
        "claude"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/babel__generator": "^7.27.0",
        "@types/babel__template": "^7.4.4",
        "@types/cors": "^2.8.19",
        "@types/diff-match-patch": "^1.0.36",
        "@types/express": "^5.0.3",
        "@types/istanbul-lib-coverage": "^2.0.6",
        "@types/istanbul-lib-report": "^3.0.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^16.18.0",
        "@types/request": "^2.48.8",
        "@types/yargs-parser": "^21.0.3",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "builtin-modules": "^3.3.0",
        "esbuild": "^0.21.5",
        "eslint": "^8.0.0",
        "jest": "^29.7.0",
        "obsidian": "^1.4.0",
        "ts-jest": "^29.3.1",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.59.0",
        "@google/genai": "^1.13.0",
        "@mistralai/mistralai": "^1.7.2",
        "@modelcontextprotocol/sdk": "^1.17.2",
        "axios": "^1.10.0",
        "chromadb": "^3.0.0",
        "cors": "^2.8.5",
        "diff-match-patch": "^1.0.5",
        "eventsource-parser": "^1.1.2",
        "express": "^5.1.0",
        "gpt-tokenizer": "^2.9.0",
        "groq-sdk": "^0.26.0",
        "openai": "^5.12.2",
        "tough-cookie": "^4.1.3",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "yaml": "^2.6.1"
    }
}
